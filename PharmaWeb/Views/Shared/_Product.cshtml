@model IEnumerable<PharmaWeb.Data.Product>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productnumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Productnumber)
                </td>
                <td>
                    @item.Price.ToString("c")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <img style="height:100px;width:100px" src="@Url.Content(item.Image)" />
                </td>
                <td>
                    <a asp-action="Edit" class="btn-bg-primary btn" style="background-color:green; color:white" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Detail" class="btn-bg-primary btn" style="background-color:lightblue; color:white" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>