@model IEnumerable<PharmaWeb.Data.Product>


<h1>Online shop</h1>
<hr />
<br />
<h4>Overview</h4>


<div class="contcontainer d-flex justify-content-center mt-50 mb-50">
    <div class="row">
        @foreach (var item in Model.Reverse())
        {
            <div class="padr col-md-4 mt-2">
                <div class="card">
                    <div class=" card-body">
                        <div class="card-img-actions">
                             <img src="@item.Image" class="card-img-top" alt="image product">
                        </div>
                    </div>
                    <div class="card-body bg-light text-center">
                        <div class="mb-2">
                            <h6 class=" font-weight-semibold mb-2">  <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="titlegreen" data-abc="true">@Html.DisplayFor(modelItem => item.Name)</a> 
                                </h6> <p class="text-muted" >@Html.DisplayFor(modelItem => item.Category.Name)</p>
                        </div>
                        <h3 class="mb-0 font-weight-semibold">€  @Html.DisplayFor(modelItem => item.Price)</h3>
                        <div> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> </div>
                        <div class="text-muted mb-3">@Html.DisplayFor(modelItem => item.Stock) in stock</div>

                        <form asp-controller="Product" asp-action="Detail" class="form-inline">
                            <div class="panel-body">
                                <div>                                    
                                    <a asp-action="Detail"  class=" profile-reg btn btn-light"; color:white" asp-route-id="@item.Id">Order this</a> 
                                </div>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        }

    </div>
</div>