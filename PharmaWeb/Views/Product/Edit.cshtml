@using PharmaWeb.Data
@model PharmaWeb.Models.ViewModels.UpdateProductCommand



<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Price" class="control-label"></label>
                <input type="text" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Dscription" class="control-label"></label>
                <input type="text" asp-for="Dscription" class="form-control" />
                <span asp-validation-for="Dscription" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Productnumber" class="control-label"></label>
                <input type="text" asp-for="Productnumber" class="form-control" />
                <span asp-validation-for="Productnumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Stock" class="control-label"></label>
                <input type="text" asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SelectedCategoryId" class="control-label"></label>
                <select asp-for="SelectedCategoryId" asp-items="@(new SelectList(Model.Categorys, nameof(Category.Id), nameof(Category.Name)))" class="form-control"></select>
                <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="ProfileImage" class="control-label"></label>
                <input asp-for="ProfileImage" class="form-control">
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section scripts{
<script type="text/javascript">

    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
}
