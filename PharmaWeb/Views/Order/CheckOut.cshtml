@model PharmaWeb.Models.ViewModels.CreateCheckOutCommand
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
 
    double total = 0;
}

<h1>@localizer["confirm"]</h1>

<h4>@localizer["overview"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckOut">
            <div class="form-group mb-2">
                <ul>
                    @foreach(CartLine cl in Model.CartLines)
                    {
                        <li>@cl.Quantity x @cl.Product.Name</li>
                        total += cl.Product.Price;
                    }
                </ul>
                <p><b>Total:</b> @total.ToString("c")</p>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="LastName" class="control-label"></label>
                <input type="text" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Street" class="control-label"></label>
                <input type="text" asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Number" class="control-label"></label>
                <input type="number" asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Zip" class="control-label"></label>
                <input type="number" asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="City" class="control-label"></label>
                <input type="text" asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Order now" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
</div>


